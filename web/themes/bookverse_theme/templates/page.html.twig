<!DOCTYPE html>
<html>
  <head>
    {{ attach_library('bookverse_theme/global-styling') }}
    {{ head_title }}
    {{ head }}
    {{ styles }}
    {{ scripts }}
  </head>
  <body class="{{ attributes.class }}">
    <header class="container py-3">
      {{ page.header }}
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      {{ page.primary_menu }}
    </nav>

    <main class="container my-4">
      <div class="row">
        <div class="col-md-8">
          {{ page.content }}
        </div>
        <aside class="col-md-4">
          {{ page.sidebar }}
        </aside>
      </div>
    </main>

    <footer class="bg-dark text-white text-center py-3">
      {{ page.footer }}
    </footer>

    {{ page.bottom }}
  </body>
</html>